    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Account.Id" />
            <div class="form-group">
                <label asp-for="Account.UserName" class="control-label"></label>
                <input asp-for="Account.UserName" class="form-control" />
                <span asp-validation-for="Account.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Tel" class="control-label"></label>
                <input asp-for="Account.Tel" class="form-control" />
                <span asp-validation-for="Account.Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Job" class="control-label"></label>
                <input asp-for="Account.Job" class="form-control" />
                <span asp-validation-for="Account.Job" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.CurrentAddress" class="control-label"></label>
                <input asp-for="Account.CurrentAddress" class="form-control" />
                <span asp-validation-for="Account.CurrentAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Email" class="control-label"></label>
                <input asp-for="Account.Email" class="form-control" />
                <span asp-validation-for="Account.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Password" class="control-label"></label>
                <input asp-for="Account.Password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.RoleId" class="control-label"></label>
                <select asp-for="Account.RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                <span asp-validation-for="Account.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
